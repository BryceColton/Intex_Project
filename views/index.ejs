<script>
  // Function to fetch live counter data
  function fetchLiveCounter() {
    fetch('/liveCounter')
      .then(response => response.json())
      .then(data => {
        if (data.totalCompleted !== undefined) {
          document.getElementById('live-counter').textContent = data.totalCompleted || 0;
        } else {
          document.getElementById('live-counter').textContent = "No data available";
        }
      })
      .catch(error => {
        console.error("Error fetching live counter:", error);
        document.getElementById('live-counter').textContent = "Error";
      });
  }

  // Update the counter every 5 seconds (you can adjust this interval)
  setInterval(fetchLiveCounter, 5000);

  // Initial fetch when the page loads
  fetchLiveCounter();
</script>

