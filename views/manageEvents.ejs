<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin -- Turtle Shelter Project</title>
    <link rel="icon" type="image/png" href="/img/logo.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="stylesheet" href="/styles.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap"
      rel="stylesheet"
    />
  </head>
    <body>
    <nav class="navbar">
        <div class="navbar-logo">Turtle Shelter Project</div>
        <div class="navbar-buttons">
            <!-- These will be navbar buttons to take the admin to pages that will manage the volunteers and events -->
            <form action="/admin" method="GET"><button class="btn" type="submit">Admin Home</button></form>
            <form action="/manageUsers" method="GET"><button class="btn" type="submit">Manage Admin Users</button></form>
            <form action="/manageVolunteers" method="GET"><button class="btn" type="submit">Manage Volunteers</button></form>
        </nav>

        <h1 style="text-align: center">Pending Event Requests</h1>

        <!-- Pending events table -->
        <table>
          <thead>
            <tr>
              <th>Event Name</th>
              <th>Organization</th>
              <th>Organizer First Name</th>
              <th>Organizer Last Name</th>
              <th>Event Type</th>
              <th>City</th>
              <th>State</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (pending_events.length > 0) { %> <% pending_events.forEach(row => { %>
            <!-- dynamically create html table rows for each row in the database -->
            <!--says that for each record, one at a time, send it to that variable "row"-->
            <tr>
              <input type="hidden" value="row.eventid" />
              <td><%= row.event_name %></td>
              <td><%= row.organization %></td>
              <td><%= row.organizer_first_name %></td>
              <td><%= row.organizer_last_name %></td>
              <td><%= row.event_type %></td>
              <td><%= row.city %></td>
              <td><%= row.state %></td>
              <td><%= row.status %></td>
              <td><%= row.actions %></td>
              <!-- Edit button to go to the editEvent page where the admin will be able to accept/decline event requests -->
              <td>
                <form action="/viewEvent/<%= row.eventid %>" method="GET" style="display: inline">
                  <!--The action is the route. You have to write this. the stuff after the / is a parameter-->
                  <button type="submit">View</button>
                </form>
                <!-- Delete button so that the admin can handle unwanted event requests -->
                <form action="/deleteEvent/<%= row.id %>" method="POST" style="display: inline">
                  <button
                    type="submit"
                    onclick="return confirm('Are you sure you want to delete this record?');"
                  >
                    Delete
                  </button>
                </form>
              </td>
            </tr>
            <% }) %> <% } else { %>
            <tr>
              <td colspan="7">No data available</td>
            </tr>
            <% } %>
          </tbody>
        </table>

        <br><br>
        <h1 style="text-align: center">Upcoming Events</h1>
        <!-- Upcoming Events table -->
        <table>
            <thead>
              <tr>
                <th>Date</th>
                <th>Time</th>
              </tr>
            </thead>
            <tbody>
              <% if (finalized_events.length > 0) { %> <% finalized_events.forEach(row => { %>
              <!-- dynamically create html table rows for each row in the database -->
              <!--says that for each record, one at a time, send it to that variable "row"-->
              <tr>
                <input type="hidden" value="row.id" />
                <td><%= row.date %></td>
                <td><%= row.time %></td>
                <td><%= row.actions %></td>
                <!-- Edit button to go to the editEvent page where the admin will be able to mark the event as completed and input event stats -->
                <td>
                  <form action="/viewEvent/<%= row.id %>" method="GET" style="display: inline">
                    <!--The action is the route. You have to write this. the stuff after the / is a parameter-->
                    <button type="submit">View</button>
                  </form>
                </td>
              </tr>
              <% }) %> <% } else { %>
              <tr>
                <td colspan="7">No data available</td>
              </tr>
              <% } %>
            </tbody>
          </table>


    <!-- Button to add a new event. -->
    <form action="/adminAddEvent" method="GET">
        <button type="submit">Add New Event</button>
    </form>

    <!-- Button to view completed events. -->
    <form action="/adminCompletedEvents" method="GET">
        <button type="submit">View Completed Events</button>
    </form>

    <!-- Button to view declined events. -->
    <form action="/adminDeclinedEvents" method="GET">
        <button type="submit">View Declined Events</button>
    </form>
</html>
