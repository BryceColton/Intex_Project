        <h1 style="text-align: center">Upcoming Events</h1>
        <!-- Upcoming Events table -->
        <table>
            <thead>
              <tr>
                <th>Event Date</th>
                <th>Team Members Needed</th>
                <th>Team Members Registered</th>
                <th>Event Name</th>
                <th>Organization</th>
                <th>Event Type</th>
                <th>City</th>
                <th>State</th>
                <th>RSVP</th>
              </tr>
            </thead>
            <tbody>
              <% if (approved_events.length > 0) { %> <% approved_events.forEach(row => { %>
              <!-- dynamically create html table rows for each row in the database -->
              <!--says that for each record, one at a time, send it to that variable "row"-->
              <tr>
                <!-- <input type="hidden" name="eventid" value="<%= row.eventid %>" /> -->
                <td><%= row.date %></td>
                <td><%= row.team_members_needed %></td>
                <td><%= row.team_members_registered %></td>
                <td><%= row.event_name %></td>
                <td><%= row.organization %></td>
                <td><%= row.event_type %></td>
                <td><%= row.city %></td>
                <td><%= row.state %></td>
                <!-- Edit button to go to the editEvent page where the admin will be able to mark the event as completed and input event stats -->
                <td>
                  <form action="/teamMemberRsvp/<%= row.eventid %>" method="POST" style="display: inline">
                    <!--The action is the route. You have to write this. the stuff after the / is a parameter-->
                    <button class="btn-table" type="submit">RSVP</button>
                  </form>
                </td>
              </tr>
              <% }) %> <% } else { %>
              <tr>
                <td colspan="7">No data available</td>
              </tr>
              <% } %>
            </tbody>
          </table>
</html>