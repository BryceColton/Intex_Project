    <style>
      /* Global Styles */
      body {
        font-family: 'Roboto', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f8f9fa;
      }
    
      h1 {
        text-align: center;
        margin-top: 30px;
        color: #424242;
        font-size: 2em;
      }
    
      /* Table Styles */
      table {
        width: 100%;
        margin: 30px auto;
        border-collapse: collapse;
        background-color: #ffffff;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        overflow: hidden;
        table-layout: fixed; /* Ensure columns don't overflow */
      }
    
      th, td {
        padding: 12px 20px;
        text-align: left;
        border-bottom: 1px solid #ddd;
        word-wrap: break-word; /* Prevent text from overflowing */
      }
    
      th {
        background-color: #424242;
        color: white;
      }
    
      td {
        background-color: #f1f1f1;
      }

  /* Target the 4th column (Last Name) */
  th:nth-child(9), td:nth-child(9) {
    width: 115px; /* Reduce the width of the Last Name column */
  }

    /* Target the 4th column (Last Name) */
    th:nth-child(5), td:nth-child(5) {
    width: 150px; /* Reduce the width of the Last Name column */
  }

  th:nth-child(1), td:nth-child(1) {
    width: 300px; /* Make the 6th column a bit wider */
    text-align: center; /* Center align the buttons */
  }
  th:nth-child(3), td:nth-child(3) {
    width: 150px; /* Make the 6th column a bit wider */
    text-align: left; /* Center align the buttons */
  }
  
    
      tr:hover td {
        background-color: #424242;
        color: white;
      }
    
      /* Container for table to enable scrolling on smaller screens */
      .table-container {
        overflow-x: auto; /* Enables horizontal scrolling */
        -webkit-overflow-scrolling: touch; /* Smooth scrolling on mobile */
        width: 100%;
        margin-bottom: 30px; /* To separate the table from the content below */
      }
    
      /* Buttons inside the table */
      .btn-table {
        padding: 8px 15px;
        background-color: #424242;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 0.9em;
        transition: background-color 0.3s;
      }
    
      .btn-table:hover {
        background-color: white;
        color: #424242;
      }
    
      .btn-delete {
        background-color: #e74a3b;
        margin-left: 5px;
      }
    
      .btn-delete:hover {
        background-color: #c0392b;
      }
    
      /* Responsive Design */
      @media (max-width: 768px) {
        table {
          width: 100%;
          overflow-x: auto;
        }
    
        th, td {
          font-size: 0.9em; /* Adjust font size for smaller screens */
          padding: 8px;
        }
    
        .form-container button {
          width: 100%; /* Makes the form button more responsive */
        }
      }
    
      /* Form Styles */
      .form-container {
        text-align: center;
        margin-top: 30px;
      }
    
      .form-container button {
        padding: 10px 20px;
        background-color: #424242;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-weight: 600;
        font-size: 1em;
        transition: background-color 0.3s;
      }
    
      .form-container button:hover {
        background-color: #2e5bbf;
      }
    </style>
  </head>
