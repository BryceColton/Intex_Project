<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin -- Turtle Shelter Project</title>
    <link rel="icon" type="image/png" href="/img/logo.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="stylesheet" href="/styles.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <style>
      /* Global Styles */
      body {
        font-family: 'Roboto', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f8f9fa;
      }
    
      h1 {
        text-align: center;
        margin-top: 30px;
        color: #424242;
        font-size: 2em;
      }
    
      /* Table Styles */
      table {
        width: 100%;
        margin: 30px auto;
        border-collapse: collapse;
        background-color: #ffffff;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        overflow: hidden;
        table-layout: fixed; /* Ensure columns don't overflow */
      }
    
      th, td {
        padding: 12px 20px;
        text-align: left;
        border-bottom: 1px solid #ddd;
        word-wrap: break-word; /* Prevent text from overflowing */
      }
    
      th {
        background-color: #424242;
        color: white;
      }
    
      td {
        background-color: #f1f1f1;
      }
    
      tr:hover td {
        background-color: #424242;
        color: white;
      }
    
      /* Container for table to enable scrolling on smaller screens */
      .table-container {
        overflow-x: auto; /* Enables horizontal scrolling */
        -webkit-overflow-scrolling: touch; /* Smooth scrolling on mobile */
        width: 100%;
        margin-bottom: 30px; /* To separate the table from the content below */
      }
    
      /* Buttons inside the table */
      .btn-table {
        padding: 8px 15px;
        background-color: #424242;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 0.9em;
        transition: background-color 0.3s;
      }
    
      .btn-table:hover {
        background-color: white;
        color: #424242;
      }
    
      .btn-delete {
        background-color: #e74a3b;
        margin-left: 5px;
      }
    
      .btn-delete:hover {
        background-color: #c0392b;
      }
    
      /* Responsive Design */
      @media (max-width: 768px) {
        table {
          width: 100%;
          overflow-x: auto;
        }
    
        th, td {
          font-size: 0.9em; /* Adjust font size for smaller screens */
          padding: 8px;
        }
    
        .form-container button {
          width: 100%; /* Makes the form button more responsive */
        }
      }
    
      /* Form Styles */
      .form-container {
        text-align: center;
        margin-top: 30px;
      }
    
      .form-container button {
        padding: 10px 20px;
        background-color: #424242;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-weight: 600;
        font-size: 1em;
        transition: background-color 0.3s;
      }
    
      .form-container button:hover {
        background-color: #2e5bbf;
      }
    </style>
    
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar">
      <div class="navbar-logo">Turtle Shelter Project</div>
      <div class="navbar-buttons">
        <form action="/admin" method="GET">
          <button class="btn" type="submit">Admin Home</button>
        </form>
        <form action="/manageVolunteers" method="GET"><button class="btn" type="submit">Manage Volunteers</button></form>
        <form action="/manageEvents" method="GET">
          <button class="btn" type="submit">Manage Events</button>
        </form>
      </div>
    </nav>

    <!-- Volunteer Management Table -->
    <h1>Current Admin</h1>
    <div class="table-container"> <!-- Wrap table inside container for scrolling -->
      <table>
        <thead>
          <tr>
            <th>User Name</th>
            <th>Password</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% if (users.length > 0) { %>
            <% users.forEach(row => { %>
              <tr>
                <td><%= row.admin_user_name %></td>
                <td><%= row.admin_password %></td>
                <td><%= row.admin_first_name %></td>
                <td><%= row.admin_last_name %></td>
                <td>
                  <form action="/editUser/<%= row.admin_user_name %>" method="GET" style="display: inline">
                    <button type="submit" class="btn-table">Edit</button>
                  </form>
                  <form action="/deleteUser/<%= row.admin_user_name %>" method="POST" style="display: inline">
                    <button type="submit" class="btn-table btn-delete" onclick="return confirm('Are you sure you want to delete this record?');">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="9">No data available</td>
            </tr>
          <% } %>
        </tbody>
      </table>
      <br><br>
          <!-- Button to add a new event. -->
    <form action="/adminAddUser" method="GET">
        <button type="submit">Add New Admin</button>
    </form>
    </div>
  </body>
</html>